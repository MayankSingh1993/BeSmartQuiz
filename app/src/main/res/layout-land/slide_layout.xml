<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"


    xmlns:tools = "http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id = "@+id/slide_image"
        android:layout_width = "@dimen/_200dp"
        android:layout_height = "@dimen/_200dp"

        android:layout_alignParentStart = "true"
        android:layout_alignParentTop = "true"
        android:layout_marginStart = "@dimen/_53dp"
        android:layout_marginTop = "@dimen/_58dp"
        android:src = "@drawable/turns18"
        tools:ignore = "ContentDescription"
        android:layout_alignParentLeft = "true"
        android:layout_marginLeft = "@dimen/_53dp" />

    <TextView
        android:id = "@+id/slide_heading"
        android:gravity="center"
        android:layout_width = "match_parent"
        android:layout_height = "@dimen/_58dp"
        android:layout_alignTop = "@+id/slide_image"
        android:layout_toEndOf = "@+id/slide_image"
        android:text = "@string/slide_heading"
        android:textColor = "#cccccc"
        android:textSize = "@dimen/_20sp"
        android:layout_toRightOf = "@+id/slide_image" />

    <TextView
        android:id = "@+id/slide_descs"
        android:layout_width = "match_parent"
        android:layout_height = "@dimen/_142dp"
        android:layout_alignBottom = "@+id/slide_image"
        android:layout_toEndOf = "@+id/slide_image"
        android:padding = "@dimen/_35dp"
        android:text = "@string/slide_description"
        android:textColor = "#CCCCCC"
        android:textSize = "@dimen/_16sp"
        android:gravity="center"
        android:layout_toRightOf = "@+id/slide_image" />
</RelativeLayout>